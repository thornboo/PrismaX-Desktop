{
  "name": "desktop",
  "version": "0.1.0",
  "private": true,
  "main": "electron-dist/main.cjs",
  "scripts": {
    "dev:renderer": "next dev \"renderer\" -p 3001",
    "build:renderer": "next build \"renderer\"",
    "start:renderer": "next start \"renderer\" -p 3001",
    "build:electron": "tsup",
    "rebuild:native": "electron-rebuild -f -w better-sqlite3",
    "dev:electron": "wait-on tcp:3001 && pnpm build:electron && pnpm rebuild:native && electron \"electron-dist/main.cjs\"",
    "dev": "concurrently \"pnpm dev:renderer\" \"pnpm dev:electron\"",
    "build": "pnpm build:electron && pnpm build:renderer",
    "type-check": "tsc -p \"electron/tsconfig.json\" --noEmit"
  },
  "dependencies": {
    "@prismax/ai-sdk": "workspace:*",
    "@prismax/core": "workspace:*",
    "@prismax/database": "workspace:*",
    "@prismax/shared": "workspace:*",
    "@prismax/ui": "workspace:*",
    "better-sqlite3": "^11.10.0",
    "next": "^15.0.0",
    "react": "19.2.3",
    "react-dom": "19.2.3"
  },
  "devDependencies": {
    "concurrently": "^9.0.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@tailwindcss/postcss": "^4",
    "@electron/rebuild": "^3.7.1",
    "electron": "^32.0.0",
    "electron-builder": "^25.1.8",
    "tailwindcss": "^4",
    "tsup": "^8.0.2",
    "typescript": "^5",
    "wait-on": "^8.0.0"
  }
}
